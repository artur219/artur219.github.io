<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="general">
            <field name="image1" type="media" label="Image Front" filter="string" class="form-control" directory="_media/products" />
            <field name="image2" type="media" label="Image Side" filter="string" class="form-control" directory="_media/products" />
            <field name="image3" type="media" label="Image Back" filter="string" class="form-control" directory="_media/products" />
        </fieldset>
        <fieldset name="options">
            <field name="category" type="itemlist" label="Kategorie" filter="string" class="form-control" admintable="true" required="true" app="categories"/>
            <field name="price" type="text" label="Preis" filter="string" class="form-control" />
            <field name="sku" type="text" label="SKU" filter="string" class="form-control" />
            <field name="collection" type="text" label="Kollektion" filter="string" class="form-control" />
            <field name="brand" type="text" label="Marke/Hersteller" filter="string" class="form-control" />
        </fieldset>
    </fields>
</form>
